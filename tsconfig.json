{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es6", "es2019.object", "es2019.array", "dom"],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react"
  }
}
